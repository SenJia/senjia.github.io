---
import BaseLayout from "../layouts/BaseLayout.astro";
import HorizontalCard from "../components/HorizontalCard.astro";
---

<BaseLayout title = "Projects" sideBarActiveItemID="projects">
  <div>
    <div class="text-3xl w-full font-bold mb-5">Projects</div>
    <div class="text-xl w-full font-bold mb-5">All of the projects were completed when I was in academia.</div>
  </div>

  <HorizontalCard
    title="Position Information"
    img="/post_img.webp"
    desc="The codebase for our position project."
    url="https://github.com/SenJia/Position-Information"
    badge="NEW"
  />
  <div class="divider my-0"></div>
  <HorizontalCard
    title="FN-AUC: A New Saliency Metric"
    img="/post_img.webp"
    desc="We proposed a new saliency metric to solve the long-standing centre bias problem in saliency evaluation."
    url="https://github.com/SenJia/Farthest-Neighbor-AUC"
  />

</BaseLayout>
